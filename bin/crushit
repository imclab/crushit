#!/usr/bin/env node

var crushIt = require('../lib/main'),
    commander = require('commander')
    website = '';
    
commander
  .version('0.0.1')
  .usage('[options] <url ...>')
  .option('-s, --strict', 'Use strict parser mode. Default [false]')
  .option('-b, --beautify', 'Beautify code. Default [false]') 
  .parse(process.argv);
 
if (commander.args.length > 0) {
    website = commander.args[0];
    
    console.log('Reading scripts from: ');
    console.log('  - %s', website); 
    console.log('=======================================================================>>');
    
    
    crushIt.init({
        website: website,
        directory: process.cwd(), 
        parserOptions: {
            strict: !!(commander.strict)
        },
        beautify: !!(commander.beautify)
    });    
}
else {
    commander.help();
}




