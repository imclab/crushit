#!/usr/bin/env node

var crushIt = require('../lib/main'),
    commander = require('commander')
    website = '';
    
commander
  .version('0.0.1')
  .usage('[options] <url ...>')
  .option('-m, --minify', 'Minify output')
  .option('-z, --modernizr', 'include Modernizr if detected')
  .parse(process.argv);
 
if (commander.args.length > 0) {
    website = commander.args[0];
    
    console.log('Reading scripts from: ');
    console.log('  - %s', website); 
    console.log('==========================================================>>');
    
    
    crushIt.init({
        website: website,
        directory: process.cwd(), 
        modernizr: !!(commander.modernizr),
        minify: !!(commander.minify)
    });    
}
else {
    commander.help();
}




