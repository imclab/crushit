{
  "name": "crushit",
  "version": "0.3.7",
  "description": "CrushIt is a commandline tool for crawling web pages and compiling scripts",
  "homepage": "http://qawemlilo.github.io/crushit/",
  "main": "index.js",
  "directories": {
    "test": "test",
    "lib": "lib",
    "bin": "bin"
  },
  "scripts": {
    "test": "npm run jshint && node node_modules/mocha/bin/mocha test",
    "jshint": "node node_modules/jshint/bin/jshint lib/helper.js lib/crushit.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qawemlilo/crushit.git"
  },
  "keywords": [
    "script minifier",
    "compressor",
    "optimizer",
    "build tool"
  ],
  "author": "Qawelesizwe Mlilo",
  "license": "MIT",
  "dependencies": {
    "cheerio": "~0.13.1",
    "uglify-js": "~2.4.12",
    "commander": "~2.1.0",
    "chalk": "~0.4.0"
  },
  "preferGlobal": true,
  "devDependencies": {
    "mocha": "latest",
    "should": "latest",
    "jshint": "latest"
  },
  "bin": {
    "crushit": "bin/crushit"
  },
  "engine": "node >= 0.8.9"
}
