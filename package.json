{
  "name": "crushit",
  "version": "0.2.5",
  "description": "Crushit is a build tool for concatenating and minifying your JavaScipt for production",
  "main": "bin/crushit",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run jshint && node node_modules/mocha/bin/mocha test",
    "jshint": "node node_modules/jshint/bin/jshint lib/helper.js lib/crushit.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qawemlilo/crushit.git"
  },
  "keywords": [
    "script minifier",
    "compressor",
    "optimizer",
    "build tool"
  ],
  "author": "Qawelesizwe Mlilo",
  "license": "MIT",
  "dependencies": {
    "request": "~2.34.0",
    "cheerio": "latest",
    "uglify-js": "latest",
    "commander": "latest"
  },
  "preferGlobal": true,
  "devDependencies": {
    "mocha": "latest",
    "should": "latest",
    "jshint": "latest"
  },
  "bin": {
    "crushit": "bin/crushit"
  },
  "engine": "node >= 0.8.9"
}
